/* components/quota_modal/quota_modal.wxss */
.qm-mask {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,.55);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200
}
.qm-modal{width:86vw;max-width:680rpx;background:#fff;border-radius:24rpx;padding:28rpx 22rpx 66rpx;position:relative;box-shadow:0 12rpx 30rpx rgba(0,0,0,.25)}
.qm-title{text-align:center;font-size:34rpx;font-weight:800}
.qm-sub {
  margin-top: 8rpx;
  text-align: center;
  color: #666
}
.green {
  color: #16C06E
}

.row {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 14rpx;
  align-items: center;
  margin-left: 5%;
  gap: 12rpx;
}
.row-flex {
  display: flex;
}
.row-left{
  width: 65%;
  margin-right: 5%;
}
.row-title{
  font-weight: 700;
  color: #333;
}
.link{color:#3B82F6;}
.link.orange{color:#ff6a00}
.link.brown{color:#a67c52}
.row-desc{margin-top:6rpx;font-size:24rpx;color:#888}

.row-right {
  width: 30%;
}

.pill{
  width: 90%;
  height: 64rpx;
  border-radius: 999rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx
}
.pill::after{border:none}
.pill-blue{background:#3B82F6;color:#fff}
.pill-orange{background:#ff8a4a;color:#fff}
.pill-brown{background:#c6a279;color:#fff}

/* center close */
.close-wrap{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -150rpx;
}
.close-ring{
  width: 96rpx;
  height: 96rpx;
  border-radius: 999rpx;
  background: rgba(0,0,0,.0);
  display: flex;
  align-items: center;
  justify-content: center;
}
.close-x {
  width: 50rpx;
  height: 50rpx;
  border-radius: 999rpx;
  border: 5rpx solid rgba(255,255,255,.9);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  line-height: 76rpx;
  text-align: center;
}