/* Root container: fixed at right side over all pages */
.zero-root {
  position: fixed;
  z-index: 200; /* bump if pages use high z-index */
  pointer-events: auto;
}

/* Collapsed single button (Btn_4) */
.zero-btn {
  display: block;
  height: auto; /* keep image aspect */
}

/* Horizontal row (Btn_5 + Btn_6) */
.zero-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.zero-row-btn {
  display: block;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* Transparent mask to catch outside clicks */
.zero-mask {
  position: fixed;
  inset: 0;
  background: transparent; /* keep page visible; just absorbs taps */
  z-index: 199;
}

/* Side panel (quota modal) anchored to the right stack position */
.zero-panel {
  position: absolute;
  right: 0;         /* starts aligned to the right anchor */
  bottom: 0;        /* aligns with the bottom of the zero-root */
  transform: translateX(-100%); /* moved left next to the buttons */
  min-width: 520rpx;
  max-width: 680rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.18);
  padding: 28rpx;
  z-index: 201;
}

/* Small arrow pointing to the buttons */
.zero-panel-arrow {
  position: absolute;
  right: -16rpx;
  bottom: 40rpx; /* adjust to align arrow with Btn_6 center if you like */
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-left: 16rpx solid #ffffff;
  filter: drop-shadow(-4rpx 4rpx 6rpx rgba(0,0,0,0.08));
}

.zero-panel-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.zero-panel-body {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.zero-panel-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.zero-panel-btn {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  line-height: 1;
}
