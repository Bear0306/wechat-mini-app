.page { 
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  min-height: 100vh; 
  background: #f6f7f9; 
  }
.header { 
  padding: 24rpx; 
  font-size: 32rpx; 
  font-weight: 700; 
  color: #111; 
  text-align: center;
}
.disclaimer-card {
  margin: 20rpx;
  padding-left: 20rpx;
  padding-right: 10rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  border: 1rpx solid #f1f1f1;
}
.disclaimer-text {
  color: #ff0000;
  font-size: 25rpx;
  font-weight: 600;
  line-height: 1.6;
  display: block;
}

.list { height: calc(100vh - 300rpx); padding: 0rpx 20rpx 20rpx; box-sizing: border-box; }

/* 广告卡片 */
.ad-card {
  position: relative; overflow: hidden; margin: 16rpx 0; border-radius: 16rpx; height: 160rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06); background: #fff;
}
.ad-img { width: 100%; height: 100%; }
.ad-tag {
  position: absolute; top: 8rpx; right: 12rpx; font-size: 20rpx; color: #fff;
  background: rgba(0,0,0,0.5); padding: 2rpx 8rpx; border-radius: 12rpx;
}

